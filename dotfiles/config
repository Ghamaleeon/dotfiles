[core]
	repositoryformatversion = 0
	filemode = true
	bare = true
[status]
	showUntrackedFiles = no
[remote "origin"]
	url = https://github.com/Ghamaleeon/dotfiles.git
	fetch = +refs/heads/*:refs/remotes/origin/*
[push]
	autoSetupRemote = yes
[branch "main"]
	remote = origin
	merge = refs/heads/main
[credential]
	helper = store
[alias]
	update = "!f() { pacman -Qqe > ~/packages.txt; git add -u && git commit -m \"$@\" && git push; }; f"
	files = "ls-tree -r main --name-only"
